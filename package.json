{
  "name": "WeChatRead",
  "build": {
    "productName": "微信读书",
    "appId": "com.github.smartheye.WeChatRead",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.icns",
      "target": [
        "tar.gz",
        "zip"
      ]
    },
    "win": {
      "icon": "icon.ico",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "icon.ico"
    }
  },
  "version": "1.2.1",
  "description": "微信读书",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "GitHub",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^25.4.0",
    "electron-builder": "^24.6.3"
  }
}
